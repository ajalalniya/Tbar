<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp" android:id="@+id/rel_cars">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ico_vanet2" />

        <co.tara.tarabari.driver.myview.MyTextView
            android:id="@+id/myTextView21"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView2"
            android:text="نام مالک:" />

        <co.tara.tarabari.driver.myview.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView2"
            android:textColor="#000000"
            android:text="علی جلال نیا" />

        <co.tara.tarabari.driver.myview.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_pelaknum"
            android:text="شماره پلاک:"
            android:layout_marginRight="60dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/myTextView21"
            android:layout_toStartOf="@+id/myTextView21" />
        <co.tara.tarabari.driver.myview.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_pelaknum"
            android:layout_alignRight="@+id/lbl_pelaknum"
            android:textColor="#000000"
            android:text="43n851-47"/>
        <co.tara.tarabari.driver.myview.MyTextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#0a000000"/>
    </RelativeLayout>

</LinearLayout>